<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Bus Fragment" /-->

    <com.google.android.gms.maps.MapView
        android:id="@+id/bus_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:elevation="5dp">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button_show_schedule"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/schedule_menu" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/button_scan_bus_qr"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded_corner"
        android:drawingCacheQuality="high"
        android:scaleType="fitXY"
        android:src="@drawable/qr_code"
        android:padding="15dp"
        android:elevation="10dp"
        android:contentDescription="Scan bus QR code"/>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="350dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        >

        <android.support.design.widget.NavigationView
            android:id="@+id/list_bus_schedule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:fitsSystemWindows="true" />
    </android.support.v4.widget.DrawerLayout>


</RelativeLayout>