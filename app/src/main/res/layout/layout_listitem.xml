<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="160dp"
        app:cardCornerRadius="8dp"
        app:cardMaxElevation="3dp"
        app:cardElevation="2dp"
        android:layout_marginHorizontal="5dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_deals_banner"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/starbucks"/>

            <TextView
                android:id="@+id/text_deals_desc"
                android:layout_below="@id/img_deals_banner"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="RM 3 off any Starbucks drink"
                android:textColor="@android:color/black"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/text_deals_price"
                android:layout_below="@id/text_deals_desc"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="600 points"
                android:padding="3dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>